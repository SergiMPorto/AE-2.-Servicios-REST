		Libro l5 = new Libro(16,"Dragones y mazmorras", "Un ladrillo de la hostia", "Dungeon master");
		
		listaLibros.add(l2);
		listaLibros.add(l3);
		listaLibros.add(l4);
		listaLibros.add(l5);
		listaLibros.add(l1);
		
	
	}	
	